{
  "type": "object",
  "properties": {
    "needs_geo_compliance": { "type": "string", "enum": ["yes","no","uncertain"] },
    "risk_level": { "type": "string", "enum": ["critical","high","medium","low"] },
    "citations": {
      "type": "array",
      "items": { "type": "string", "pattern": "^ctx_[0-9]+$" },
      "minItems": 0
    },
    "reasoning": {
      "type": "string",
      "maxLength": 80,
      "pattern": "^(?:(?:ctx_[0-9]+|[A-Za-z0-9._ยง-])+[ ,;:]*)+$"
    }
  },
  "required": ["needs_geo_compliance","citations"],
  "additionalProperties": false,
  "allOf": [
    {
      "if": { "properties": { "needs_geo_compliance": { "const": "yes" } } },
      "then": { "properties": { "citations": { "minItems": 1 } } }
    }
  ]
}
